# Load all libraries needed, run all at once if possible

# Install any missing packages if needed using install.packages() before loading
  # for example, if you don't have tidyverse installed, you can run:
  # install.packages("tidyverse")

# Load entire tidyverse at once (includes dplyr, tibble, readr, tidyr, ggplot2, purrr, stringr, forcats)
suppressPackageStartupMessages({
  library(tidyverse)
  library(officer)
  library(patchwork)
  library(scales)
  library(gtsummary)
  library(flextable)
})

# Individual packages (now loaded via tidyverse above):
# library(dplyr)          # Data manipulation (mutate, filter, select, etc.)
# library(tibble)         # Modern data frames (as_tibble)  
# library(readr)          # Reading CSV files (read_csv)
# library(tidyr)          # Data reshaping
# library(ggplot2)        # Data visualization
# library(purrr)          # Functional programming
# library(stringr)        # String manipulation
# library(forcats)        # Factor handling

# Check if packages loaded successfully
cat("Libraries loaded successfully!\n")
