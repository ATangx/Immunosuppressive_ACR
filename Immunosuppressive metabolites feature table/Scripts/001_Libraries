# Load all libraries needed, run all at once if possible

# Core tidyverse packages
library(dplyr)          # Data manipulation (mutate, filter, select, etc.)
library(tibble)         # Modern data frames (as_tibble)
library(readr)          # Reading CSV files (read_csv)
library(tidyr)          # Data reshaping
library(ggplot2)        # Data visualization
library(purrr)          # Functional programming

# Additional useful packages for metabolomics analysis
library(stringr)        # String manipulation
library(forcats)        # Factor handling

# Alternative: Load entire tidyverse at once
# library(tidyverse)    # Uncomment this line to load all above packages at once

# Check if packages loaded successfully
cat("Libraries loaded successfully!\n")